@page
@model LoginModel

@{
    ViewData["Title"] = "Log In";
}
<div class="card border border-primary" style="margin-left:35rem;margin-right:35rem">
    <div style="margin:8px" align="center">
        <h1>@ViewData["Title"]</h1>
        <div class="row">
            <div class="col-md">
                <section>
                    <form id="account" method="post">
                        <h4>Informe email e senha para fazer login.</h4>
                        <hr class="border border-primary border-3 opacity-75" />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password">Senha</label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <div class="checkbox">
                                <label asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Log In</button>
                        </div>
                        <div class="form-group">
                            <p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Esqueci minha senha</a>
                            </p>
                            <p>
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrar novo usuário</a>
                            </p>
                        </div>
                    </form>
                </section>
            </div>
