@model SystemFH.Models.Learning

@{
    ViewData["Title"] = "Novo";
}
<div class="col-md card border border-primary">
    <div style="margin:8px">
        <h1>Novo</h1>
        <h4>Aprendizado</h4>
        <hr class="border border-primary border-3 opacity-75" />
        <div class="row">
            <div class="col-md">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-2">
                            <label asp-for="CircleId" class="control-label"></label>
                            <select asp-for="CircleId" class="form-control" asp-items="ViewBag.CircleId"></select>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="ThemeId" class="control-label"></label>
                            <select asp-for="ThemeId" class="form-control" asp-items="ViewBag.ThemeId"></select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="StudentId" class="control-label"></label>
                            <select asp-for="StudentId" class="form-control" asp-items="ViewBag.StudentId"></select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="TeacherId" class="control-label"></label>
                            <select asp-for="TeacherId" class="form-control" asp-items="ViewBag.TeacherId"></select>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <label asp-for="OportunityLearning" class="control-label"></label>
                            <input asp-for="OportunityLearning" class="form-control" />
                            <span asp-validation-for="OportunityLearning" class="text-danger"></span>
                        </div>
                        <div class="col-md-3">
                            <label asp-for="LearningAction" class="control-label"></label>
                            <input asp-for="LearningAction" class="form-control" />
                            <span asp-validation-for="LearningAction" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="MeasurementDate" class="control-label"></label>
                            <input asp-for="MeasurementDate" class="form-control" />
                            <span asp-validation-for="MeasurementDate" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="MeasurementForm" class="control-label"></label>
                            <input asp-for="MeasurementForm" class="form-control" />
                            <span asp-validation-for="MeasurementForm" class="text-danger"></span>
                        </div>
                        <div class="col-md-2">
                            <label asp-for="Result" class="control-label"></label>
                            <input asp-for="Result" class="form-control" />
                            <span asp-validation-for="Result" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <label asp-for="Comment" class="control-label"></label>
                            <input asp-for="Comment" class="form-control" />
                            <span asp-validation-for="Comment" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Status" class="control-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="0">Branco</option>
                                <option value="1">Concluído</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>
                    </div>
                    <hr class="border border-primary border-3 opacity-75" />
                    <div class="col-md">
                        <div class="row">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </div>
                    <hr class="border border-primary border-3 opacity-75" />
                </form>
            </div>
        </div>
        <div>
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
