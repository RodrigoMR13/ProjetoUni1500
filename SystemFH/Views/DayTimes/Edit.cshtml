@model SystemFH.Models.DayTime

@{
    ViewData["Title"] = "Editar";
}
<div class="col-md card border border-primary">
    <div style="margin:8px">
        <h1>Editar</h1>
        <h4>Horas/Dia</h4>
        <hr class="border border-primary border-3 opacity-75" />
        <div class="row">
            <div class="col-md">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="row">
                        <div class="col-md-4">
                            <label asp-for="ActualStatusId" class="control-label"></label>
                            <select asp-for="ActualStatusId" class="form-control" asp-items="ViewBag.ActualStatusId"></select>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Data" class="control-label"></label>
                            <input asp-for="Data" class="form-control" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="RealTime" class="control-label"></label>
                            <input asp-for="RealTime" class="form-control" />
                            <span asp-validation-for="RealTime" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="row" style="padding-left:0.75rem; padding-top:0.75rem">
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="Delivered" /> @Html.DisplayNameFor(model => model.Delivered)
                            </label>
                        </div>
                    </div>
                    <hr class="border border-primary border-3 opacity-75" />
                    <div class="col-md">
                        <div class="row">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                        </div>
                    </div>
                    <hr class="border border-primary border-3 opacity-75" />
                </form>
            </div>
        </div>
        <div>
            <a class="btn btn-secondary" asp-action="Index">Voltar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
