@model PaginationViewModel<CashManager>

@{
    ViewData["Title"] = "Gestão de Caixa";
}

<table class="table">
    <thead>
        <tr>
            <th>
                <input id="checkCentral" type="checkbox" />
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().RealizationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().CashDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().CashMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().CompetMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().AccMonth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Enterprise)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().CostCenter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Account)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Person)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().BankAccount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().Comp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().BankBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Items.FirstOrDefault().EnterpriseBalance)
            </th>
            <th>
                <button type="button" id="botaoDeletar" style="border-color:transparent; background-color:transparent; display:none">
                    <i class="fas fa-trash" style="color:red"></i>
                </button>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    <input name="checkSelect" type="checkbox" value="@item.Id" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RealizationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompetMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccMonth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enterprise.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostCenter.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Person.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankAccount.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Comp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BankBalance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EnterpriseBalance)
                </td>
                <td>
                    <a class="btn btn-primary" style="font-size:x-small; margin:2px" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info" style="font-size:x-small; margin:2px" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-danger" style="font-size:x-small; margin:2px" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<partial name="_Pagination" />